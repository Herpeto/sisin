<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/move_pointer"
        android:layout_width="329dp"
        android:layout_height="124dp"
        android:text="@string/move_pointer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952" />

    <Button
        android:id="@+id/button"
        android:layout_width="144dp"
        android:layout_height="94dp"
        android:layout_marginBottom="28dp"
        android:onClick="leftClick"
        android:text="@string/left_click"
        app:layout_constraintBottom_toTopOf="@+id/move_pointer"
        app:layout_constraintStart_toStartOf="@+id/move_pointer" />

    <Button
        android:id="@+id/button3"
        android:layout_width="144dp"
        android:layout_height="94dp"
        android:layout_marginBottom="28dp"
        android:onClick="rightClick"
        android:text="@string/right_click"
        app:layout_constraintBottom_toTopOf="@+id/move_pointer"
        app:layout_constraintEnd_toEndOf="@+id/move_pointer" />

</androidx.constraintlayout.widget.ConstraintLayout>